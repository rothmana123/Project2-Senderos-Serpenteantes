<%- include('../partials/header') %>


<div class="add-new-trail">
  <h2>Add a New Trail</h2>
  <form id="new-form" action="/trails" method="POST" autocomplete="off">
    <div class="form-group">
      <label for="name">Name of Trail:</label>
      <input type="text" id="name" name="name" required>
    </div>
    <div class="form-group">
      <label for="miles">Length of Hike (Miles):</label>
      <input type="number" id="miles" name="miles" required>
    </div>
    <div class="form-group">
      <label for="region">Region (*Northern CA Only*):</label>
      <select id="region" name="region" required>
        <option value="San Francisco Bay Area">San Francisco Bay Area</option>
        <option value="Redwood Empire">Redwood Empire</option>
        <option value="Shasta and Trinity">Shasta and Trinity</option>
        <option value="Lassen and Modoc">Lassen and Modoc</option>
        <option value="Mendocino and Wine Country">Mendocino and Wine Country</option>
        <option value="Sacramento and Gold Country">Sacramento and Gold Country</option>
        <option value="Tahoe and Northern Sierra">Tahoe and Northern Sierra</option>
        <option value="Yosemite and Mammoth Lakes">Yosemite and Mammoth Lakes</option>
        <option value="Monterey and Big Sur">Monterey and Big Sur</option>
        <option value="San Joaquin Valley">San Joaquin Valley</option>
        <option value="Sequoia and King Canyon">Sequoia and King Canyon</option>
      </select>
    </div>
    <div class="form-group">
      <label for="state">State:</label>
      <input type="text" id="state" name="state" required>
    </div>
    
    <div class="optional-section">
      <h3>Optional</h3>
      <div class="form-group">
        <label for="latitude">Latitude:</label>
        <input type="number" id="latitude" name="latitude">
      </div>
      <div class="form-group">
        <label for="longitude">Longitude:</label>
        <input type="number" id="longitude" name="longitude">
      </div>
    </div>
    
    <div class="form-group">
      <label>Features:</label><br>
      <label><input type="checkbox" name="features" value="Coast"> Coast</label><br>
      <label><input type="checkbox" name="features" value="Hills"> Hills</label><br>
      <label><input type="checkbox" name="features" value="Mountains"> Mountains</label><br>
      <label><input type="checkbox" name="features" value="Creek"> Creek</label><br>
      <label><input type="checkbox" name="features" value="Rivers"> Rivers</label><br>
      <label><input type="checkbox" name="features" value="Forests"> Forests</label><br>
      <label><input type="checkbox" name="features" value="Lakes"> Lakes</label><br>
      <label><input type="checkbox" name="features" value="Wildflowers"> Wildflowers</label><br>
      <label><input type="checkbox" name="features" value="Waterfall"> Waterfall</label><br>
      
    </div>
    <button type="submit">Save Trail</button>
  </form>
  

<%- include('../partials/footer') %>