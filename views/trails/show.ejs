<%- include('../partials/header') %>

<h2 class="card-title"><%= trail.name %></h2>

<table id="list" class="table table-hover caption-top">
    <tbody>
      <tr>
        <td style="font-weight: 600;">Region:</td>
        <td style="padding-left: 10px;"><%= trail.region %></td>
      </tr>
      <tr>
        <td style="font-weight: 600;">Distance:</td>
        <td style="padding-left: 10px;"><%= trail.miles %></td>
      </tr>
      <tr>
        <td style="font-weight: 600;">Features:</td>
        <td style="padding-left: 10px;"><%= trail.features %></td>
      </tr>
      <tr>
        <td style="font-weight: 600;">Trail Added By:</td>
        <td style="padding-left: 10px;"><%= trail.userName %></td>
      </tr>
      <tr>
        <td style="font-weight: 600;">Date Created:</td>
        <td style="padding-left: 10px;"><%= trail.createdAt.toLocaleDateString() %></td>
      </tr>
    </tbody>
  </table>
  <% if (user && user._id.equals(trail.user)) { %>
    <form action="/trails/<%= trail._id %>/edit" method="GET">
        <button type="submit">Edit Trail</button>
      </form>
  <% } %>

  <% if (user && user._id.equals(trail.user)) { %>
    <form action="/trails/<%= trail._id %>?_method=DELETE" method="POST">
      <button type="submit">Delete Trail</button>
    </form>
  <% } %>

  <% if (user) { %>
    <% if (user.favorites.includes(trail._id)) { %>
      <form action="/users/<%= user._id %>/favorite-trail/<%= trail._id %>?_method=DELETE" method="POST">
        <button type="submit">Remove from Favorites</button>
      </form>
    <% } else {%>
      <form action="/users/<%= user._id %>/favorite-trail/<%= trail._id %>?_method=PUT" method="POST">
        <button type="submit">Add to Favorites</button>
      </form>
    <% } %>
  <% } %>

  <br><br><h2>Add a Review:</h2>
<form id="add-review-form" action="/reviews/<%= trail._id %>/reviews" method="POST">
  <label>Name of Trail:</label>
  <input type="text" name="nameOfTrail" value="<%= trail.name %>">
  <label>Date Hiked:</label>
  <input type="date" name="dateHiked" >
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5" selected>5</option>
  </select>
  <input type="submit" value="Add Review">
</form>

<br><br><h2>Reviews!</h2>
<% if (trail.reviews.length) { %>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Date Hiked</th>
          <th>Review</th>
          <th>Rating</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0 %>
        <% trail.reviews.forEach(function(r) { %>
          <% total += r.rating %>
          <tr>
            <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
            <td><%= r.dateHiked ? r.dateHiked.toLocaleDateString() : '' %></td>
            <td><%= r.content %></td>
            <td><%= r.rating %></td>
            <td>
              <% if (user?._id.equals(r.user)) { %>
                <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                  <button type="submit">X</button>
                </form>
              <% } %>
            </td>
          </tr>
        <% }); %>
        <tr>
          <td colspan="3"></td>
          <td><strong><%= (total / trail.reviews.length).toFixed(1) %></strong></td>
        </tr>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Reviews Yet</h5>
  <% } %>

<%- include('../partials/footer') %>