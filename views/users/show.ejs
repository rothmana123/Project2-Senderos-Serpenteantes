<%- include('../partials/header') %>

<h1><%= user.name %></h1>

<div class="section">
    <h2>Hiking Log</h2>
    <!-- Content for Hiking Log section -->
    <% if (completedTrails && completedTrails.length > 0) { %>
      <ul>
          <% completedTrails.forEach(function(trail) { %>
            <li><a href="/trails/<%= trail._id %>"><%= trail.name %></a></li>
          <% }); %>
      </ul>
  <% } else { %>
      <p>No completed trails found.</p>
  <% } %>
</div>

<div class="section">
    <h2>Top Hikes</h2>

    <!-- Content for Favorite Hikes section -->
    <% if (favoriteTrails && favoriteTrails.length > 0) { %>
      <ul>
          <% favoriteTrails.forEach(function(trail) { %>
            <li><a href="/trails/<%= trail._id %>"><%= trail.name %></a></li>
          <% }); %>
      </ul>
  <% } else { %>
      <p>No favorite hikes found.</p>
  <% } %>

</div>





<div class="section">
    <h2>Wish List</h2>
    <!-- Content for Wish List section -->
</div>

<div class="section">
    <h2>Reviews</h2>
    <!-- Content for Reviews section -->
</div>

