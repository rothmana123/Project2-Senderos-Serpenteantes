<%- include('../partials/header') %>

<h1><%= user.name %></h1>

<div class="section">
    <h2>Hiking Log</h2>
    <!-- Content for Hiking Log section -->
    <% if (completedTrails && completedTrails.length > 0) { %>
      <ul>
          <% completedTrails.forEach(function(trail) { %>
            <li><a href="/trails/<%= trail._id %>"><%= trail.name %></a></li>
          <% }); %>
      </ul>
  <% } else { %>
      <p>No completed trails found.</p>
  <% } %>
</div>

<div class="section">
    <h2>Favorite Hikes</h2>

    <!-- Content for Favorite Hikes section -->
    <% if (favoriteTrails && favoriteTrails.length > 0) { %>
      <ul>
          <% favoriteTrails.forEach(function(trail) { %>
            <li><a href="/trails/<%= trail._id %>"><%= trail.name %></a></li>
          <% }); %>
      </ul>
  <% } else { %>
      <p>No favorite hikes found.</p>
  <% } %>

</div>

<div class="section">
    <h2>Reviews</h2>

    <% if (user.reviews.length) { %>
      <table>
        <thead>
          <tr>
            <th>Trail Name</th>
            <th>Date Hiked</th>
            <th>Review</th>
            <th>Rating</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% user.reviews.forEach(function(r) { %>
            <tr>
              <td><%= r.nameOfTrail %></td>
              <td><%= r.dateHiked ? r.dateHiked.toLocaleDateString() : '' %></td>
              <td><%= r.content %></td>
              <td><%= r.rating %></td>
            </tr>
          <% }); %>
          <tr>
            <td colspan="4"></td>
          </tr>
        </tbody>
      </table>
    <% } else { %>
      <h5>No Reviews Yet</h5>
    <% } %>



    <!-- Content for Reviews section -->
</div>

<%- include('../partials/footer') %>